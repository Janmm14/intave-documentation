@require 'palette.styl'
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap');

:root
  --bgColor $bgColor
  --borderColor $borderColor
  --accentColor $accentColor
  --selectionBg $selectionBg

*
  font-family: Inter;

.logo
  width 45.76px !important
  margin-right 5px !important

html
body
input
.links
.navbar
.sidebar
.suggestions
  background-color: var(--bgColor) !important

.suggestions & .focused
  background-color: var(--selectionBg) !important
  border-color var(--borderColor) !important
  border-style solid
  border-width 1px

.nav-link & .action-button
  color white !important

.nav-link:not(.action-button)
.repo-link:not(.action-button)
  color #808080 !important
  transition 0.1s linear
  font-weight 700
  font-size 16px

.nav-link:hover
.repo-link:hover
  color #fff !important

.search-box
  order 1
  margin-right 0
  margin-left 1rem

.suggestions
  left auto !important
  right 0 !important

tr
  &:nth-child(2n)
    background-color var(--bgColor) !important

.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem

  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0

  &.tip
    background-color #000000 !important
    border-color #42b983 !important

  &.warning
    background-color #000000 !important
    border-color darken(#ffe564, 35%) !important
    color darken(#d0ccc6, 0%) !important

    .custom-block-title
      color darken(#ffe564, 50%) !important

    a
      color $textColor !important

  &.danger
    background-color #000000
    border-color darken(red, 20%) !important
    color darken(#ffffff, 0%) !important

    .custom-block-title
      color darken(red, 40%) !important

    a
      color $textColor !important

  &.details
    display block
    position relative
    border-radius 2px
    margin 1.6em 0
    padding 1.6em
    background-color #000

    h4
      margin-top 0

    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0

    summary
      outline none
      cursor pointer

.description
  font-weight 600